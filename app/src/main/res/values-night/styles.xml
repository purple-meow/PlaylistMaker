<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/title</item>
        <item name="titleTextColor">@color/yp_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<item name="android:fontFamily">@font/ys_display_medium</item>
<item name="android:textFontWeight">500</item>
<item name="navigationIconTint">@color/yp_white</item>
    </style>
<style name="SettingsItemStyle">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:paddingStart">@dimen/start_padding</item>
<item name="android:paddingEnd">@dimen/end_padding</item>
<item name="android:paddingVertical">@dimen/settings_pad_vert</item>
<item name="android:textColor">@color/yp_white</item>
<item name="android:textSize">@dimen/text_size</item>
<item name="android:fontFamily">@font/ys_display_regular</item>
<item name="android:textFontWeight">400</item>
<item name="android:textAllCaps">false</item>
<item name="drawableTint">@color/yp_white</item>
</style>

<style name="MainActButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">0dp</item>
<item name="android:layout_weight">1</item>
<item name="android:gravity">center</item>
<item name="android:backgroundTint">@color/yp_white</item>
<item name="android:textColor">@color/yp_black</item>
<item name="android:textAllCaps">false</item>
<item name="iconGravity">textStart</item>
<item name="iconPadding">@dimen/icon_padding</item>
<item name="android:textSize">@dimen/button_text_size</item>
<item name="iconTint">@color/yp_black</item>
<item name="cornerRadius">@dimen/button_radius</item>
<item name="android:fontFamily">@font/ys_display_medium</item>
<item name="android:textFontWeight">500</item>
</style>
<style name="MainActivityStyle">
<item name="android:background">@color/yp_black</item>
</style>

<style name="SearchEditTextStyle">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">match_parent</item>
<item name="android:paddingStart">12dp</item>
<item name="android:paddingEnd">38dp</item>
<item name="android:inputType">text</item>
<item name="android:maxLines">1</item>
<item name="android:background">@drawable/edittext_background</item>
<item name="backgroundColor">@color/yp_white</item>
<item name="android:drawableStart">@drawable/search</item>
<item name="android:drawablePadding">8dp</item>
<item name="android:fontFamily">@font/ys_display_regular</item>
<item name="android:textSize">16sp</item>
<item name="android:textColor">@color/yp_black</item>
<item name="android:textColorHint">@color/yp_black</item>
<item name="android:hint">@string/search</item>
</style>

<style name="SearchCancelButton">
<item name="android:layout_width">wrap_content</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:layout_gravity">end|center_vertical</item>
<item name="android:layout_marginEnd">12dp</item>
<item name="android:tint">@color/yp_black</item>
<item name="android:src">@drawable/search_cancel_button</item>
<item name="android:visibility">gone</item>
</style>
    </resources>